extends layout-simple

append stylesheets
    link(href='https://fonts.googleapis.com/css?family=Pinyon+Script' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css')
    link(href='/css/curtain.css' rel='stylesheet' type='text/css')

block content
    .curtain
        .navbar.navbar-inverse.topMenu(role="navigation" ng-cloak)
          .container-fluid
            .navbar-header
              button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navigation-circles")
                span.sr-only Show circles
                span.icon-bar
                span.icon-bar
                span.icon-bar
              
              a.navbar-brand(href="/#/")
                span.circle(ng-include="'/img/glyphs/icon-white-circle.svg'")

            .collapse.navbar-collapse#navigation-circles
              ul.nav.navbar-nav
                li
                    a.name(href="/") Circle Blvd.

              ul.nav.navbar-nav.navbar-right
                li 
                    a(href="/signin"
                        data-toggle="collapse" data-target="#navigation-circles.in") Sign in 
                li
                  a(href="/partner"
                    data-toggle="collapse" data-target="#navigation-circles.in") Partner

                li
                  a(href="/tour"
                    data-toggle="collapse" data-target="#navigation-circles.in") Tour


        .container-fluid.main.debug.first
            .view(ng-controller="SignInCtrl")
                    //- .logo
                    //-     img(src="/img/circle-blvd-basic.png" width="76")

                    .row
                        .col-sm-6.headline
                            h1 Streamlined<br/> project planning
                            
                            p For community organizations, startups,
                             | and teams of one to 15. Make things simple, again.

                            a(href="/start")
                                button.join.btn.btn-default
                                    h4 Join Free for 60 Days
                        .col-sm-6.logo
                            img(src="img/circle-blvd-basic.png")

        .block.second
            .container-fluid.main.debug
                .row
                    .col-sm-4
                        p Circle Blvd is just the right size for
                         | small, important projects.

                        .for-glyph
                            span(ng-include="'/img/glyphs/icon-same-idea.svg'")

                    .col-sm-8
                        .embed-container
                            iframe(src="//www.youtube-nocookie.com/embed/-a7n_iyqB0A?rel=0" frameborder="0" allowfullscreen)

        .block.third
            .container-fluid.main.debug
                .row
                    .col-sm-8
                        .embed-container
                            iframe(src="//www.youtube-nocookie.com/embed/77h9J0wvlxY?rel=0" frameborder="0" allowfullscreen)

                    .col-sm-4
                        p Make things simple, again.

                        p Circle Blvd helps with planning, 
                         | delegating, and remembering, at 
                         | an affordable price. 

                        a(href="/tour")
                            button.join.btn.btn-default
                                h4 Continue Tour

                        p.below-button or <a href="/start">sign up</a> today.

        include ../inc/footer